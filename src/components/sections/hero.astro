---
import MeImage from '../../assets/images/me.png';
import { Image } from 'astro:assets';
import Section from './section.astro';
import Info from './info.astro';
---

<Section>
  <div class="flex divide-x border-x">
    <div class="flex-shrink-0">
      <Image
        quality="max"
        src={MeImage}
        alt="Sam"
        class:list={['rounded-full w-32 h-32 border']}
      />
    </div>
    <div class="flex flex-col divide-y w-full">
      <div
        class="flex-1 flex flex-col justify-end pl-4 text-subtitle-secondary jb-font text-xs"
      >
        <p>TLoU & TS</p>
      </div>
      <div class="pl-4">
        <h1 class="text-3xl font-medium">Samuel</h1>
      </div>
      <div class="flex-1 flex flex-col justify-start pl-4">
        <h2 class="text-subtitle text-sm jb-font">Software Engineer</h2>
      </div>
    </div>

    <Info class="p-4 hidden md:flex" />
  </div>
</Section>
